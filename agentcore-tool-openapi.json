{
  "openapi": "3.0.0",
  "info": { "title": "AgentCore Tool API", "version": "1.0.0" },
  "paths": {
    "/callAgentCore": {
      "post": {
        "operationId": "callAgentCore",
        "description": "Send a question to AgentCore and return the result.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "question": { "type": "string" }
                },
                "required": ["question"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": { "type": "string" }
                  },
                  "required": ["answer"]
                }
              }
            }
          }
        }
      }
    }
  }
}